{
  "variables": {
      "debian_version": "9.9.0",
      "debian_name": "stretch",
      "vm_description": "Debian Stretch en CLI; proxy IUT",
      "vm_version": "1.3"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "boot_command": [
        "<esc><wait>",
        "install <wait>",
        "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-TMP.cfg <wait>",
        "debian-installer=fr_FR <wait>",
        "net.ifnames=0 biosdevname=0 <wait>",
        "auto <wait>",
        "locale=fr_FR <wait>",
        "kbd-chooser/method=fr <wait>",
        "keyboard-configuration/xkb-keymap=fr(latin9) <wait>",
        "netcfg/get_hostname={{ .Name }} <wait>",
        "netcfg/get_domain=iutcv.fr <wait>",
        "fb=false <wait>",
        "debconf/frontend=noninteractive <wait>",
        "console-setup/ask_detect=false <wait>",
        "console-keymaps-at/keymap=fr <wait>",
        "<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 8192,
      "guest_os_type": "Debian_64",
      "headless": false,
      "export_opts":
      [
        "--vsys", "0",
        "--description", "{{user `vm_description`}}",
        "--version", "{{user `vm_version`}}"
      ],
      "format": "ova",
      "http_directory": ".",
      "iso_checksum_type": "none",
      "iso_url": "debian-{{user `debian_version`}}-amd64-netinst.iso",
      "ssh_username": "root",
      "ssh_password": "vitrygtr",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "shutdown_command": "/sbin/shutdown -hP now",
      "post_shutdown_delay": "10s",
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "debian-{{user `debian_name`}}",
      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "512" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ],
        [ "modifyvm", "{{.Name}}", "--usb", "on" ],
        [ "modifyvm", "{{.Name}}", "--mouse", "usbtablet" ]
      ]
    }
  ],
  "post-processors": [
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "prep",
      "destination": "/root"
    },
    {
      "type": "shell",
      "script": "postinstall.sh",
      "environment_vars": [ "DEPLOY_TYPE=cli" ]
    },
    {
        "type": "shell",
        "inline": "rm -rf /root/prep"
    }
  ]
}
